# Variables de entorno para la plataforma de investigaciones del museo

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root

# Bases de datos por servicio
AUTH_DB_NAME=museum_auth_db
DOCUMENTS_DB_NAME=museum_docs_db
COLLECTIONS_DB_NAME=museum_collections_db
COMMENTS_DB_NAME=museum_comments_db
RESEARCH_DB_NAME=museum_research_db

# =============================================================================
# CONFIGURACIÓN DE SERVICIOS
# =============================================================================

# API Gateway
API_GATEWAY_PORT=5000
API_GATEWAY_HOST=0.0.0.0

# Auth Service
AUTH_SERVICE_PORT=5001
AUTH_SERVICE_HOST=0.0.0.0
AUTH_SERVICE_URL=http://localhost:5001

# Documents Service
DOCUMENTS_SERVICE_PORT=5002
DOCUMENTS_SERVICE_HOST=0.0.0.0
DOCUMENTS_SERVICE_URL=http://localhost:5002

# Collections Service
COLLECTIONS_SERVICE_PORT=5003
COLLECTIONS_SERVICE_HOST=0.0.0.0
COLLECTIONS_SERVICE_URL=http://localhost:5003

# Comments Service
COMMENTS_SERVICE_PORT=5004
COMMENTS_SERVICE_HOST=0.0.0.0
COMMENTS_SERVICE_URL=http://localhost:5004

# Research Service
RESEARCH_SERVICE_PORT=5005
RESEARCH_SERVICE_HOST=0.0.0.0
RESEARCH_SERVICE_URL=http://localhost:5005

# Frontend
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Bcrypt rounds for password hashing
BCRYPT_LOG_ROUNDS=12

# =============================================================================
# OAUTH 2.0 GOOGLE CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Upload settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=50485760  # 50MB en bytes
ALLOWED_EXTENSIONS=pdf

# Static files
STATIC_FOLDER=static
STATIC_URL_PATH=/static

# =============================================================================
# CONFIGURACIÓN DE LOGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# CONFIGURACIÓN DE CACHE Y PERFORMANCE
# =============================================================================

# Redis (opcional para cache)
REDIS_URL=redis://localhost:6379
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate limiting
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# CONFIGURACIÓN DE EMAIL (opcional para notificaciones)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO/PRODUCCIÓN
# =============================================================================
FLASK_ENV=development
DEBUG=True
TESTING=False

# CORS Origins (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================
COMPOSE_PROJECT_NAME=museum-research-platform